<Window x:Class="WPF.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Agregar Persona" Height="325" Width="500"
        WindowStartupLocation="CenterScreen">


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- header -->
        <Border Grid.ColumnSpan="2"
             BorderBrush="LightGray" BorderThickness="5">
            <TextBlock FontSize="24"
HorizontalAlignment="Center" VerticalAlignment="Center"
Text="Agregar Persona"/>
        </Border>

        <!-- First name -->
        <Label Grid.Row="1" Grid.Column="0"
                Content="Primer Nombre"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="10,10,5,5"/>

        <TextBox Grid.Row="1" Grid.Column="1"
            x:Name="firstName"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Margin="10,10,5,5"
                TextWrapping="Wrap"/>

        <!-- Paternal lastname -->
        <Label Grid.Row="2" Grid.Column="0"
        Content="Apellido Paterno"
        HorizontalAlignment="Right" VerticalAlignment="Center"
        Margin="10,10,5,5"/>

        <TextBox Grid.Row="2" Grid.Column="1"
    x:Name="paternalLastname"
         HorizontalAlignment="Stretch" VerticalAlignment="Center"
        Margin="10,10,5,5"
                 MaxLength="50"
        TextWrapping="Wrap"/>
        
        <!-- Maternal lastname -->
        <Label Grid.Row="3" Grid.Column="0"
               Content="Apellido Materno"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Margin="10,10,5,5"/>

        <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="maternalLastname"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center"
                 Margin="10,10,5,5"
                 MaxLength="50"
                 TextWrapping="Wrap"/>

        <!-- Identification -->
        <Label Grid.Row="4" Grid.Column="0"
        Content="Identificación"
        HorizontalAlignment="Right" VerticalAlignment="Center"
        Margin="10,10,5,5"/>

        <TextBox Grid.Row="4" Grid.Column="1"
    x:Name="identification"
         HorizontalAlignment="Stretch" VerticalAlignment="Center"
        Margin="10,10,5,5"
                 MaxLength="50"
        TextWrapping="Wrap"/>
        
        <!-- buttons -->
        <Border Grid.Row="5"
                Grid.ColumnSpan="2"
             BorderBrush="LightGray" BorderThickness="5">
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Margin="10,10,10,10">
                <Button x:Name="saveButton"
                        Content="Guardar"
                        Width="100"
                        Height="30"
                        Margin="10,10,10,10"
                        Click="saveButton_Click"/>
                <Button x:Name="cancelButton"
                        Content="Cancelar"
                        Width="100"
                        Height="30"
                        Margin="10,10,10,10"
                        Click="cancelButton_Click"/>
            </StackPanel>

        </Border>

        <ProgressBar x:Name="loader" 
                     Grid.RowSpan="6" Grid.ColumnSpan="2"
             IsIndeterminate="True" 
             Visibility="Collapsed"/>

    </Grid>
</Window>